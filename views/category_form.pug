extends layout 

block content 
  h1= title 
  form(method='POST')
    div.form-group
      label(for='name') Name: 
      input#name.form-control(type='text', placeHolder='String, Electronic etc.', name='name' require value=(undefined===category ? '' : category.name))
    button.btn.btn-primary(type='submit') Submit
  

  if errors
    ul 
      for error in errors 
        li!= error.msg