extends layout 

block content 
  h1= title 
  form(method='POST')
    div.form-group
      label(for='name') Secret password: 
      input#password.form-control(type='password', placeHolder='Enter secret password', name='secretPassword' require )
    button.btn.btn-primary(type='submit') Submit
  

  if errors
    ul 
      for error in errors 
        li!= error.msg